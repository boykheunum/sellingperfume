<table class="table table-bordered">
    <thead>
        <tr>
            <th scope="col">Mã chức vụ</th>
            <th scope="col">Mã nhân viên</th>
            <th scope="col">Họ và tên nhân viên</th>
            <th scope="col">Ngày sinh</th>
            <th scope="col">Địa chỉ</th>
            <th scope="col">Giới tính</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Avatar</th>

            <th>#</th>
        </tr>
    </thead>
    <tbody>
        {{#each data}}

        <tr>
            <th scope="row">{{this.position_id}}</th>
            <th scope="row">{{this.employee_id}}</th>
            <th scope="row">{{this.employee_name}}</th>
            <th scope="row">{{this.birthday}}</th>
            <th scope="row">{{this.address}}</th>
            <th scope="row">{{this.sex}}</th>
            <th scope="row">{{this.phone}}</th>
            <th scope="row">{{this.image}}</th>




            <td>
                <button type="button" class="btn btn-secondary" id="{{this.employee_id}}">Thêm</button>
                <button type="button" class="btn btn-danger" id="{{this.employee_id}}"
                    value="{{this.employee_id}}">Sửa</button>
                <button type="button" class="btn btn-success" id="{{this.employee_id}}"
                    value="{{this.employee_id}}">Xóa</button>
            </td>

        </tr>
        {{/each}}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        //update
        $(".btn-danger").click(function (e) {
            let position = $(this);
            let id = position.val();
            window.location.replace("/admin/suanv/" + id);
        });

        //delete
        $(".btn-success").click(function (e) {
            let position = $(this);
            let id = position.val();
            alert(id)
            $.ajax({
                type: "DELETE",
                url: "/employees/delete/" + id,
                success: function (data) {
                    alert("thanh cong");
                }
            })
        });
        //add
        $(".btn-secondary").click(function (e) {
            let position = $(this);
            window.location.replace("/admin/addemployees");
        });
    });
</script>
